{% extends 'base.html.twig' %}

{% block title %}Book Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Book Details</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Title</th>
                    <td>{{ book.title }}</td>
                </tr>
                <tr>
                    <th>Category</th>
                    <td>{{ book.category }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ book.price }}</td>
                </tr>
                <tr>
                    <th>Publication Date</th>
                    <td>{{ book.publicationDate|date('Y-m-d') }}</td>
                </tr>
                <tr>
                    <th>Author</th>
                    <td>{{ book.author.username }}</td>
                </tr>
                <tr>
                    <th>Reference</th>
                    <td>{{ book.ref }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_book_index') }}" class="btn btn-secondary">Back to list</a>
        <a href="{{ path('app_book_edit', {'id': book.id}) }}" class="btn btn-warning">Edit</a>

        <form method="post" action="{{ path('app_book_delete', {'id': book.id}) }}" style="display: inline-block">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
            <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
        </form>
    </div>
{% endblock %}
