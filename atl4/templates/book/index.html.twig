{% extends 'base.html.twig' %}

{% block title %}Books List{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Books</h1>

        <a href="{{ path('app_book_new') }}" class="btn btn-primary mb-3">Create new Book</a>

        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Publication Date</th>
                    <th>Author</th>
                    <th>Reference</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.title }}</td>
                    <td>{{ book.category }}</td>
                    <td>{{ book.price }}</td>
                    <td>{{ book.publicationDate|date('Y-m-d') }}</td>
                    <td>{{ book.author.username }}</td>
                    <td>{{ book.ref }}</td>
                    <td>
                        <a href="{{ path('app_book_show', {'id': book.id}) }}" class="btn btn-info btn-sm">Show</a>
                        <a href="{{ path('app_book_edit', {'id': book.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                        <form method="post" action="{{ path('app_book_delete', {'id': book.id}) }}" style="display: inline-block">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">No books found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
