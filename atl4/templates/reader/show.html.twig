{% extends 'base.html.twig' %}

{% block title %}Reader Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Reader Details</h1>

        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">{{ reader.username }}</h5>
                <p class="card-text">Number of borrowed books: {{ reader.borrowedBooks|length }}</p>
            </div>
        </div>

        <h2>Borrowed Books</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Author</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for book in reader.borrowedBooks %}
                <tr>
                    <td>{{ book.title }}</td>
                    <td>{{ book.category }}</td>
                    <td>{{ book.author.username }}</td>
                    <td>
                        <form method="post" action="{{ path('app_reader_return_book', {'id': reader.id, 'bookId': book.id}) }}" style="display: inline-block">
                            <button type="submit" class="btn btn-warning btn-sm">Return Book</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No books borrowed</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('app_reader_index') }}" class="btn btn-secondary">Back to list</a>
            <a href="{{ path('app_reader_edit', {'id': reader.id}) }}" class="btn btn-warning">Edit</a>
            <a href="{{ path('app_reader_borrow', {'id': reader.id}) }}" class="btn btn-success">Borrow Book</a>
            <form method="post" action="{{ path('app_reader_delete', {'id': reader.id}) }}" style="display: inline-block">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reader.id) }}">
                <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this reader?');">Delete</button>
            </form>
        </div>
    </div>
{% endblock %}