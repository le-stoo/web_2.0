{% extends 'base.html.twig' %}

{% block title %}New Author{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Create new Author</h1>

        <form method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="username" required>
            </div>
            
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            
            <div class="mb-3">
                <label for="nb_books" class="form-label">Number of Books</label>
                <input type="number" class="form-control" id="nb_books" name="nb_books" required>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
            <a href="{{ path('app_author_index') }}" class="btn btn-secondary">Back to list</a>
        </form>
    </div>
{% endblock %}
