{% extends 'base.html.twig' %}

{% block title %}Author Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Author Details</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ author.id }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ author.username }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ author.email }}</td>
                </tr>
                <tr>
                    <th>Number of Books</th>
                    <td>{{ author.nbBooks }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_author_index') }}" class="btn btn-secondary">Back to list</a>
        <a href="{{ path('app_author_edit', {'id': author.id}) }}" class="btn btn-warning">Edit</a>

        <form method="post" action="{{ path('app_author_delete', {'id': author.id}) }}" style="display: inline-block">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ author.id) }}">
            <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
        </form>
    </div>
{% endblock %}
