{% extends 'base.html.twig' %}

{% block title %}Author Details - {{ author.username }}{% endblock %}

{% block body %}
    <h1>Author Details</h1>

    <div class="author-details">
        <img src="{{ author.picture }}" alt="{{ author.username }}" width="200">
        <h2>{{ author.username }}</h2>
        <p>Email: {{ author.email }}</p>
        <p>Number of Books: {{ author.nb_books }}</p>
        
        <a href="{{ path('app_author_list') }}">Back to Authors List</a>
    </div>
{% endblock %}